##########################################3
############ SCREEN MANAGER ###################
PageManager:
    
    
    SelectionPage:
    CourseCatalogPage:
    

<SelectionPage>:
    
    #radius: [25, 0, 0, 0]
    #md_bg_color: app.theme_cls.primary_color
    name: 'selectionpage'

    d1:d1
    p1:p1
    #department:department
    #program:program
    MDBoxLayout:
        #label:label
        orientation:'vertical'
        size: root.width,root.height
        #md_bg_color: app.theme_cls.primary_color
        MDLabel:
            id:d1
            text:'Computer Science'
            halign: "center"
        
        MDLabel:
            id:p1
            text:'Master in Computer Science'
            halign: "center"
           
        MDRectangleFlatButton:
            text: "Show Course Catalog"
            text_color: 0, 0, 1, 1
            md_bg_color: 1, 1, 0, 1
            font_size: "18sp"
            pos_hint:{"center_x": .5, "center_y": .2}
            on_press:
                root.viewcoursecatalog()
                app.root.current = "catalogpage"
                root.manager.transition.direction ="left"

# content is for Course Catalog Page##################
<Content2>:
    orientation:'vertical'
    size_hint: 1, None
    height:150
    coursedesc:coursedesc
    courseunit:courseunit

    MDBoxLayout:
        size_hint:(1,None)
        height: 400
        #### to show the course description and unit
        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: (1,None)
            height:160
            border_radius:10
            radius:[14]

            # ###for course-unit label
            MDLabel:
                id: courseunit
                text: "title"
                font_style:'H6'
                size_hint_y: None
                height: 30

            MDSeparator:
                height: "3dp"

            MDLabel:
                id:coursedesc
                text: "Multi\nLine"
                font_size:14

<CourseCatalogPage>:
    #Main Layout
    name:'catalogpage'
    displaycatalog:displaycatalog
    selectedeptandprogram:selectedeptandprogram
    MDBoxLayout:
        orientation:'vertical'
        size: root.width,root.height
        spacing:7
        # Inside Main layout.. Top bar
        MDCard:
            size_hint_y:None
            height:root.height/10
            MDLabel:
                id:selectedeptandprogram
                text:"Course Catalog For \n Department: \nProgram:"
                text_style:'H5'
                background_color: (1,1,0,0.2)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                halign:"center"
        # Layout to show the courses
        MDBoxLayout:
            orientation:'vertical'
            background_color: (1,1,0,0.2)
            
            
            #height:root.height/10
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            ScrollView:
                bar_width:12
                MDGridLayout:
                    id:displaycatalog
                    cols:1
                    #size:(400,200)
                    #size_hint_x:1
                    size_hint_y:None
                    height:self.minimum_height
                    #height:300
                    padding:'20dp'

                    
            
                    
        MDRectangleFlatButton:
            text: "back to selection"
            text_color: 0, 0, 1, 1
            md_bg_color: 1, 1, 0, 1
            font_size: "18sp"
            pos_hint:{"center_x": .5, "center_y": .2}
            on_press:
                root.Gobacktoselectionwork()
                app.root.current = "selectionpage"
                root.manager.transition.direction ="left"