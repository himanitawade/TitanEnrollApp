WindowManager:
    Home:
    Enrollment:
    Department:
    
<Home>:
    name:"Home"
    Screen:
    
    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        
    
    MDLabel:
        id: welcome_label
        text: "Welcome to CS Course Info and Enrollment App"
        font_size: 15
        halign: 'center'
        size_hint_y: None
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        height: self.texture_size[1]
        padding_y: 15
        
    
    MDRaisedButton:
        text: "View Course Catalog"
        font_size: 12
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        md_bg_color: MDApp.theme_cls.accent_dark
        on_release: MDApp.root.current = "Department"
        
        
    MDRaisedButton:
        text: "Enrollment"
        font_size: 12
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        md_bg_color: MDApp.theme_cls.primary_dark
        on_release: MDApp.root.current = "Enrollment"
          
    Image:
        source:'Images/Logo.png'
        size_hint_x: 0.2
        allow_stretch: True
        pos_hint: {"center_x": 0.1, "center_y": 0.9}
    
<Enrollment>:
    name:"Enrollment"
    
    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

<Department>:
    name:"Department"
    
    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
    
