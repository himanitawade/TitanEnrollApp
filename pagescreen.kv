##########################################3
PageManager:
    
    HomePage:
    SelectionPage:
    CourseCatalogPage:
    
<HomePage>:
    name:"homepage"
    home:home
    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        
    
    MDLabel:
        id: home
        text: "Welcome to CS Course Info and Enrollment App"
        font_size: 20
        halign: 'center'
        size_hint_y: None
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        height: self.texture_size[1]
        padding_y: 15
        
    
    MDFillRoundFlatIconButton:
        text: "View Course Catalog"
        font_size: 12
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        md_bg_color: app.theme_cls.accent_dark
        icon:'book'
        on_press:
            app.root.current = "selectionpage"
            root.manager.transition.direction ="left"
        
        
    MDFillRoundFlatIconButton:
        text: "Enrollment"
        font_size: 12
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        md_bg_color: app.theme_cls.primary_dark
        icon: 'lock-outline'
        
          
    Image:
        source:'Images/Logo.png'
        size_hint_x: 0.2
        allow_stretch: True
        pos_hint: {"center_x": 0.1, "center_y": 0.9}

<SelectionPage>:
    
    #radius: [25, 0, 0, 0]
    #md_bg_color: app.theme_cls.primary_color
    name: 'selectionpage'

    d1:d1
    p1:p1
    MDBoxLayout:
        #label:label
        orientation:'vertical'
        size: root.width,root.height
        #md_bg_color: app.theme_cls.primary_color
        MDLabel:
            id:d1
            text:'Computer Science'
            halign: "center"
        
        MDLabel:
            id:p1
            text:'Master in Computer Science'
            halign: "center"
           
        MDRectangleFlatButton:
            text: "Show Course Catalog"
            text_color: 0, 0, 1, 1
            md_bg_color: 1, 1, 0, 1
            font_size: "18sp"
            pos_hint:{"center_x": .5, "center_y": .2}
            on_press:
                root.viewcoursecatalog()
                app.root.current = "catalogpage"
                root.manager.transition.direction ="left"

<Content>:
    adaptive_height: True

<CourseCatalogPage>:
    name:'catalogpage'
    displaycatalog:displaycatalog
    MDBoxLayout:
        #label:label
        orientation:'vertical'
        size: root.width,root.height
        ScrollView:
            MDGridLayout:
                id:displaycatalog
                cols:1
                adaptive_height:True

       
        MDRectangleFlatButton:
            text: "back to selection"
            text_color: 0, 0, 1, 1
            md_bg_color: 1, 1, 0, 1
            font_size: "18sp"
            pos_hint:{"center_x": .5, "center_y": .2}
            on_press:
                #root.viewcoursecatalog()
                app.root.current = "selectionpage"
                root.manager.transition.direction ="left"
   
